#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Checking Remote Auth Logs ==="
spawn ssh sblanken@192.168.50.210 "echo '$password' | sudo -S bash -c 'tail -n 100 /var/log/auth.log | grep -i \"sshd\|pam\|auth\"'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Check timed out"
        exit 1
    }
    eof {
        puts "\n✅ Check complete"
        exit 0
    }
}
