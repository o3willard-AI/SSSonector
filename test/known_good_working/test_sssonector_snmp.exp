#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Testing SSSonector SNMP Metrics ==="
spawn ssh sblanken@192.168.50.211 "echo '$password' | sudo -S bash -c 'echo === TESTING ENTERPRISE MIB === && snmpwalk -v2c -c public 192.168.50.212 .1.3.6.1.4.1.54321 && echo === TESTING INTERFACE STATS === && snmpwalk -v2c -c public 192.168.50.212 .1.3.6.1.2.1.2 && echo === TESTING SYSTEM INFO === && snmpwalk -v2c -c public 192.168.50.212 .1.3.6.1.2.1.1'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
