#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Local PAM Config ==="
spawn bash -c "echo '$password' | sudo -S cat /etc/pam.d/common-auth /etc/pam.d/common-account /etc/pam.d/common-session /etc/pam.d/sshd"

expect {
    "password for" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Local PAM check timed out"
        exit 1
    }
    eof {
        puts "\n=== Remote PAM Config ==="
    }
}

spawn ssh sblanken@192.168.50.210 "cat /etc/pam.d/common-auth /etc/pam.d/common-account /etc/pam.d/common-session /etc/pam.d/sshd"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Remote PAM check timed out"
        exit 1
    }
    eof {
        puts "\n✅ PAM check complete"
        exit 0
    }
}
