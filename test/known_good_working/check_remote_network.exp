#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Checking Remote Network Configuration ==="
spawn ssh sblanken@192.168.50.210 "echo '$password' | sudo -S bash -c 'echo === INTERFACES === && ip addr && echo === ROUTES === && ip route && echo === FIREWALL === && iptables -L && echo === CONNECTIONS === && netstat -tuln'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Check timed out"
        exit 1
    }
    eof {
        puts "\n✅ Check complete"
        exit 0
    }
}
