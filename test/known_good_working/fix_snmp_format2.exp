#!/usr/bin/expect -f

set timeout 30
set password "101abn"

puts "=== Fixing SNMP Script Format 2 ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'cat > /usr/local/bin/sssonector-snmp << \"EOL\"
#!/bin/bash

# Get the OID from command line
OID=\"\$1\"
TYPE=\"\$2\"

# Function to output SNMP format
output_snmp() {
    local value=\$1
    if [ \"\$TYPE\" = \"-g\" ]; then
        echo \"get\"
    elif [ \"\$TYPE\" = \"-n\" ]; then
        echo \"next\"
    fi
    echo \"\$OID\"
    echo \"integer\"
    echo \"\$value\"
}

case \"\$OID\" in
    .1.3.6.1.4.1.54321.1.1)
        output_snmp \"1234\"
        ;;
    .1.3.6.1.4.1.54321.1.2)
        output_snmp \"5678\"
        ;;
    .1.3.6.1.4.1.54321.1.3)
        output_snmp \"10\"
        ;;
    .1.3.6.1.4.1.54321.1.4)
        output_snmp \"25\"
        ;;
    .1.3.6.1.4.1.54321.1.5)
        output_snmp \"50\"
        ;;
    *)
        if [ \"\$TYPE\" = \"-n\" ]; then
            echo \"NONE\"
            exit 0
        else
            echo \"No such object available on this agent at this OID\"
            exit 1
        fi
        ;;
esac
EOL

chmod +x /usr/local/bin/sssonector-snmp

echo === RESTARTING SNMPD ===
systemctl restart snmpd

echo === TESTING SCRIPT ===
/usr/local/bin/sssonector-snmp .1.3.6.1.4.1.54321.1.1 -n

echo === TESTING SNMPWALK ===
snmpwalk -v2c -c public localhost .1.3.6.1.4.1.54321.1'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
