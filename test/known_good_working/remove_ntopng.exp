#!/usr/bin/expect -f

set timeout 30
set password "101abn"

puts "=== Removing NTOPNG ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'echo === REMOVING NTOPNG === && apt-get remove -y ntopng ntopng-data && apt-get autoremove -y && apt-get clean && echo === PURGING CONFIG === && rm -rf /etc/ntopng && echo === VERIFYING === && dpkg -l | grep ntop'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "Do you want to continue?" {
        send "Y\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
