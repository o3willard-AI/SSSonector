#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Basic SSH Connectivity Test ==="
spawn ssh -o PreferredAuthentications=password -o PubkeyAuthentication=no -o ConnectTimeout=5 sblanken@192.168.50.210 "echo 'SSH Connection Successful'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "SSH Connection Successful" {
        puts "\n✅ SSH connection and authentication successful"
        exit 0
    }
    timeout {
        puts "\n❌ Connection timed out"
        exit 1
    }
    eof {
        puts "\n❌ Connection failed"
        exit 1
    }
}
