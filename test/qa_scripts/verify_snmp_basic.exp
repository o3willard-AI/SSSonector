#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Basic SNMP Connectivity Test ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'systemctl status ntopng && echo === SNMP STATUS === && snmpwalk -v2c -c public localhost system'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Check timed out"
        exit 1
    }
    eof {
        puts "\n✅ Check complete"
        exit 0
    }
}
