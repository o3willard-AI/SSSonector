#!/usr/bin/expect -f

set timeout 30
set password "101abn"

puts "=== Testing Remote SNMP Access ==="
spawn ssh sblanken@192.168.50.211 "echo '$password' | sudo -S bash -c 'echo === TESTING REMOTE SNMP === && snmpwalk -v2c -c public 192.168.50.212 .1.3.6.1.4.1.54321.1 && echo === TESTING SPECIFIC OID === && snmpget -v2c -c public 192.168.50.212 .1.3.6.1.4.1.54321.1.1'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
