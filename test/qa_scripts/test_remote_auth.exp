#!/usr/bin/expect -f

set timeout 10
set password "101abn"

# First, enable debug logging on remote system
spawn ssh sblanken@192.168.50.210 "echo '$password' | sudo -S bash -c 'echo \"auth.*debug\" >> /etc/pam.d/sshd && systemctl restart ssh'"
expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Remote setup timed out"
        exit 1
    }
    eof
}

# Now test SSH with debug logging
spawn ssh -vvv -o PreferredAuthentications=password -o PubkeyAuthentication=no sblanken@192.168.50.210 "echo test"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "test" {
        puts "\n✅ Authentication successful"
        exit 0
    }
    timeout {
        puts "\n❌ Connection timed out"
        exit 1
    }
    eof {
        puts "\n❌ Connection closed"
        exit 1
    }
}
