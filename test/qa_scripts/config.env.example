# QA Test Environment Configuration

# VM Configuration
export QA_SERVER_VM="192.168.50.210"  # Server VM IP
export QA_CLIENT_VM="192.168.50.211"  # Client VM IP
export QA_SSH_KEY="/path/to/qa_ssh_key"  # SSH private key path
export QA_SSH_USER="qauser"  # SSH username
export QA_SUDO_PASSWORD=""  # Sudo password for remote commands

# Test Configuration
export QA_TUNNEL_TIMEOUT=30  # Seconds to wait for tunnel establishment
export QA_CLEANUP_TIMEOUT=10  # Seconds to wait for cleanup
export QA_PING_COUNT=20      # Number of ping packets for connectivity test

# Logging Configuration
export QA_LOG_DIR="/var/log/sssonector/qa_tests"  # Base directory for test logs
export QA_LOG_LEVEL="debug"  # Logging level (debug, info, warn, error)

# Test Environment Requirements
# - Ubuntu VMs with SSH access
# - Sudo privileges on VMs
# - TUN module loaded (modprobe tun)
# - Network connectivity between VMs
# - sssonector package installed
# - Proper file permissions (/etc/sssonector/)
