#!/usr/bin/expect -f

set timeout 20
set password "101abn"

puts "=== Verifying SNMP Setup ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'echo === CHECKING JQ === && which jq && echo === CHECKING SCRIPTS === && ls -l /usr/local/bin/ntopng-snmp* && echo === TESTING NTOPNG SCRIPT === && /usr/local/bin/ntopng-snmp .1.3.6.1.4.1.54321.1.1 && echo === TESTING STATS SCRIPT === && /usr/local/bin/ntopng-snmp-stats .1.3.6.1.4.1.54321.2.1 && echo === CHECKING SNMPD CONFIG === && cat /etc/snmp/snmpd.conf.d/ntopng.conf && echo === CHECKING SNMPD STATUS === && systemctl status snmpd'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
