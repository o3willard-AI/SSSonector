#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Installing jq and Testing SNMP Scripts ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'apt-get update && apt-get install -y jq && echo === TESTING NTOPNG METRICS === && /usr/local/bin/ntopng-snmp .1.3.6.1.4.1.54321.1.1 && echo === TESTING SSSONECTOR STATS === && /usr/local/bin/ntopng-snmp-stats .1.3.6.1.4.1.54321.2.1 && echo === VERIFYING SNMP === && snmpwalk -v2c -c public localhost .1.3.6.1.4.1.54321'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "Do you want to continue?" {
        send "Y\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
