#!/usr/bin/expect -f

set timeout 30
set password "101abn"

puts "=== Checking Firewall Settings ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'echo === CHECKING UFW STATUS === && ufw status && echo === ALLOWING SNMP === && ufw allow 161/udp && echo === CHECKING SNMPD CONFIG === && cat /etc/snmp/snmpd.conf && echo === CHECKING SNMPD STATUS === && systemctl status snmpd && echo === TESTING LOCAL SNMP === && snmpwalk -v2c -c public localhost .1.3.6.1.4.1.54321.1.1'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "Command may disrupt existing ssh connections" {
        send "y\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
