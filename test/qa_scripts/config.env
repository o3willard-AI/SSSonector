# QA Test Environment Configuration

# VM Configuration
export QA_SERVER_VM="192.168.50.210"  # QA server IP
export QA_CLIENT_VM=""                # Not needed for server-only test
export QA_SSH_USER="$USER"           # Current user
export QA_SSH_KEY="$HOME/.ssh/id_rsa" # Default SSH key location
export QA_SUDO_PASSWORD=""             # Set if sudo requires password

# Test Configuration
export QA_TUNNEL_TIMEOUT=60    # Extended timeout for TUN interface setup
export QA_CLEANUP_TIMEOUT=30   # Extended timeout for cleanup operations
export QA_PING_COUNT=5        # Reduced ping count for basic connectivity test

# Logging Configuration
export QA_LOG_DIR="/var/log/sssonector/qa_tests"
export QA_LOG_LEVEL="debug"

# Debug Configuration
export QA_DEBUG_ENABLED=true
export QA_VERBOSE_LOGGING=true
export QA_KEEP_LOGS=true      # Don't clean up logs between tests

# System Requirements
# - Ubuntu 20.04 or later
# - TUN module support (modprobe tun)
# - Administrative privileges
# - SSH access configured
# - Network connectivity between VMs
