#!/usr/bin/expect -f

set timeout 30
set password "101abn"

puts "=== Setting up SNMP Pass Persist ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'cat > /usr/local/bin/sssonector-snmp << \"EOL\"
#!/bin/bash

# Function to output all OIDs
output_all() {
    echo \".1.3.6.1.4.1.54321.1.1\"
    echo \"integer\"
    echo \"1234\"
    echo \".1.3.6.1.4.1.54321.1.2\"
    echo \"integer\"
    echo \"5678\"
    echo \".1.3.6.1.4.1.54321.1.3\"
    echo \"integer\"
    echo \"10\"
    echo \".1.3.6.1.4.1.54321.1.4\"
    echo \"integer\"
    echo \"25\"
    echo \".1.3.6.1.4.1.54321.1.5\"
    echo \"integer\"
    echo \"50\"
}

# Read commands from stdin
while read command; do
    case \"\$command\" in
        PING)
            echo \"PONG\"
            ;;
        getnext|get)
            read oid
            output_all
            ;;
        *)
            echo \"Command not supported\"
            exit 1
            ;;
    esac
done

EOL

chmod +x /usr/local/bin/sssonector-snmp

echo === UPDATING SNMPD.CONF ===
cat > /etc/snmp/snmpd.conf << \"EOL\"
agentAddress udp:0.0.0.0:161

# Map the community name \"public\" into a \"security name\"
com2sec notConfigUser  192.168.50.211  public
com2sec notConfigUser  localhost       public

# Map the security name into a group name:
group   notConfigGroup v1           notConfigUser
group   notConfigGroup v2c           notConfigUser

# Define a view for allowing MIB access:
view    systemview    included   .1.3.6.1.2.1.1
view    systemview    included   .1.3.6.1.2.1.2
view    systemview    included   .1.3.6.1.2.1.25.1.1
view    systemview    included   .1.3.6.1.4.1.54321

# Grant the group read-only access to the systemview view:
access  notConfigGroup \"\"      any       noauth    exact  systemview none none

# System contact information
syslocation \"QA Lab\"
syscontact Admin <admin@example.com>

# Interface monitoring
interface enp0s3 6 1000000000    # Type 6 = ethernetCsmacd Speed 1Gbps

# Enable interface statistics
includeAllDisks 10%
load 12 14 14

# SSSonector Enterprise MIB
pass_persist .1.3.6.1.4.1.54321.1 /usr/local/bin/sssonector-snmp
EOL

echo === RESTARTING SNMPD ===
systemctl restart snmpd

echo === TESTING SNMPWALK ===
snmpwalk -v2c -c public localhost .1.3.6.1.4.1.54321.1'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
