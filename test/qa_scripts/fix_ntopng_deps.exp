#!/usr/bin/expect -f

set timeout 20
set password "101abn"

puts "=== Installing NTOPNG Dependencies ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'echo === INSTALLING REDIS === && apt-get update && apt-get install -y redis-server && echo === STARTING REDIS === && systemctl start redis-server && echo === REDIS STATUS === && systemctl status redis-server && echo === REINSTALLING NTOPNG === && apt-get install --reinstall -y ntopng && echo === STARTING NTOPNG === && systemctl restart ntopng && echo === NTOPNG STATUS === && systemctl status ntopng && echo === TESTING NTOPNG === && curl -s http://localhost:3000/lua/rest/get/interface/stats'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "Do you want to continue?" {
        send "Y\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
