#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Resetting Remote SSH Configuration ==="
spawn ssh sblanken@192.168.50.210 "echo '$password' | sudo -S bash -c 'apt-get install --reinstall -y openssh-server && systemctl restart ssh'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Reset timed out"
        exit 1
    }
    eof {
        puts "\n✅ Reset complete"
        exit 0
    }
}
