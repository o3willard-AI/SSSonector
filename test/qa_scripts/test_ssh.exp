#!/usr/bin/expect -f

set timeout 60
set password [lindex $argv 0]

# Try basic SSH connection
spawn ssh sblanken@192.168.50.212 "echo 'SSH connection successful'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "Connection refused" {
        puts "SSH connection refused"
        exit 1
    }
    "SSH connection successful" {
        puts "\nSSH test passed"
        exit 0
    }
    timeout {
        puts "SSH connection timed out"
        exit 1
    }
}
