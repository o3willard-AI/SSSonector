#!/usr/bin/expect -f

set timeout 10
set password "101abn"

puts "=== Testing SNMP Queries ==="
spawn ssh sblanken@192.168.50.212 "echo '$password' | sudo -S bash -c 'echo === SNMP WALK === && snmpwalk -v2c -c public localhost .1.3.6.1.2.1.2 && echo === NTOPNG STATS === && curl -s http://localhost:3000/lua/rest/get/interfaces/stats.lua'"

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    timeout {
        puts "\n❌ Operation timed out"
        exit 1
    }
    eof {
        puts "\n✅ Operation complete"
        exit 0
    }
}
