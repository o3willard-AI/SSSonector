#!/usr/bin/expect -f

set timeout 10
set password "101abn"

spawn ssh -vvv -o PreferredAuthentications=keyboard-interactive -o PubkeyAuthentication=no -o GSSAPIAuthentication=no sblanken@192.168.50.210 "echo test"

expect {
    "keyboard-interactive" {
        puts "\nKeyboard-interactive authentication requested"
        exp_continue
    }
    "Password:" {
        puts "\nSending password..."
        send "$password\r"
        exp_continue
    }
    "test" {
        puts "\n✅ Authentication successful"
        exit 0
    }
    timeout {
        puts "\n❌ Connection timed out"
        exit 1
    }
    eof {
        puts "\n❌ Connection closed"
        exit 1
    }
}
